<Window x:Class="Diachkov_Case_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diachkov_Case_Demo"
        mc:Ignorable="d"
        
    Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <!--Левая часть окна-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!--Элементы для правой части-->
            <TextBlock Text="Авторизация" FontSize="36"
                Grid.Column="1" Grid.Row="1"/>

            <TextBlock Text="Логин" FontSize="24"
                Grid.Column="1" Grid.Row="2"/>

            <TextBox x:Name="usernameTb" Grid.Column="1" Grid.Row="3"/>

            <TextBlock Text="Пароль" FontSize="24"
                Grid.Column="1" Grid.Row="4"/>

            <PasswordBox x:Name="passwordPb" Grid.Column="1" Grid.Row="5"/>

            <Button x:Name="LoginBtn" Content="Войти" Background="#3c3c3c" Foreground="White" FontSize="16"
                Grid.Column="1" Grid.Row="7" Click="LoginBtn_Click"/>
        </Grid>
        <!--Правая часть окна-->
        <Grid Grid.Column="1" Background="#3c3c3c">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!--Элементы для левой части-->
            <TextBlock Text="Нет аккаунта?" 
                       Foreground="White" FontSize="36"
                       Grid.Column="1" Grid.Row="1"/>

            <TextBlock Text="Текст" Foreground="White" FontSize="16"
                       Grid.Column="1" Grid.Row="3"/>

            <Button x:Name="regBtn" Content="Зарегестрироваться" 
                    Background="Transparent" BorderBrush="White"
                    Foreground="White"
                    FontSize="16"
                    Grid.Column="1" Grid.Row="5" Click="regBtn_Click"/>
        </Grid>
    </Grid>
</Window>
